{{#if isAuthenticated}}
  {{nav-bar signOut='signOut'}}

  <div class="container-fluid">
    {{#each flashMessages.queue as |flash|}}
      {{flash-message flash=flash}}
    {{/each}}

    {{outlet}}

  </div>
{{else}}
  <div class="welcome">
    {{nav-bar signOut='signOut'}}

    <div class="container-fluid">
      {{#each flashMessages.queue as |flash|}}
        {{flash-message flash=flash}}
      {{/each}}

      {{outlet}}

    </div>
  </div>
{{/if}}
